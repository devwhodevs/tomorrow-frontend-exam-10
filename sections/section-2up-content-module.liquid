{% if section.blocks.size > 0 %}
    <div class="w-full max-w-screen-2xl mx-auto py-[40px] grid grid-cols-1 lg:grid-cols-2 gap-2.5">
      {% render 'captioned-image-box' for section.blocks as block %}
    </div>
{% endif %}

{% schema %}
{
  "name": "2Up content",
  "settings": [
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Content block",
      "settings": [
        {
          "type": "select",
          "id": "aspect_ratio",
          "label": "Aspect ratio",
          "options": [
            {
              "value": "aspect-square",
              "label": "1:1"
            },
            {
              "value": "aspect-[16/9]",
              "label": "16:9"
            },
            {
              "value": "aspect-[2/1]",
              "label": "2:1"
            },
            {
              "value": "aspect-[1/2]",
              "label": "1:2"
            },
            {
              "value": "aspect-[1.685/2]",
              "label": "1.685:2"
            }
          ],
          "default": "aspect-[1.685/2]"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Default Title"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Link text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "2Up content",
      "settings": {}
    }
  ]
}
{% endschema %}